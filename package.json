{
  "name": "@rweich/streamdeck-formbuilder",
  "version": "2.0.8",
  "author": "rweich",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "ci": "yarn type-check && yarn lint && yarn test",
    "clean": "rimraf ./dist/*",
    "build": "yarn clean && ttsc -p tsconfig.build.json",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha",
    "test-coverage": "nyc yarn test"
  },
  "dependencies": {
    "eventemitter3": "^5.0.0",
    "ts-type-guards": "^0.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rweich/eslint-config": "^2.0.1",
    "@rweich/prettier-config": "^2.0.0",
    "@rweich/semantic-release-config": "^2.0.1",
    "@types/chai": "^4.3.0",
    "@types/jsdom": "^21.1.0",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.4",
    "husky": "^8.0.3",
    "ignore-styles": "^5.0.1",
    "jsdom": "^21.1.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "rimraf": "^4.1.2",
    "semantic-release": "^19.0.3",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.5",
    "typescript-transform-paths": "^3.2.1"
  },
  "engines": {
    "node": ">=14.17"
  },
  "repository": "git@github.com:rweich/streamdeck-formbuilder.git",
  "bugs": "https://github.com/rweich/streamdeck-formbuilder/issues",
  "keywords": [
    "streamdeck",
    "elgato",
    "typescript",
    "sdk"
  ],
  "files": [
    "README.md",
    "dist/**/*",
    "assets/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@rweich",
    "rules": {
      "unicorn/no-array-callback-reference": 0
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --quiet --fix"
    ]
  },
  "prettier": "@rweich/prettier-config",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "json"
    ]
  },
  "release": {
    "extends": "@rweich/semantic-release-config"
  }
}
